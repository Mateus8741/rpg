generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Hero {
  id           String        @id @default(uuid())
  nome         String
  level        Int
  exp          Int
  gold         Int
  atributos    Atributos[]
  habilidade   Habilidade[]
  inventario   Inventario[]
  equipamentos Equipamento[]
  fobias       Fobia[]
  Status       Status[]
}

model Atributos {
  id           Int    @id @default(autoincrement())
  hp           Int
  mp           Int
  forca        String
  agilidade    String
  destreza     String
  constituicao String
  inteligencia String
  heroId       String
  Hero         Hero   @relation(fields: [heroId], references: [id])
}

model Status {
  id     Int    @id @default(autoincrement())
  maxAtk Int
  maxDef Int
  hero   Hero   @relation(fields: [heroId], references: [id])
  heroId String
}

model Habilidade {
  id       Int    @id @default(autoincrement())
  nome     String
  desgaste Int
  custoMP  Int
  hero     Hero   @relation(fields: [heroId], references: [id])
  heroId   String
}

model Inventario {
  id         Int    @id @default(autoincrement())
  nome       String
  quantidade Int
  hero       Hero   @relation(fields: [heroId], references: [id])
  heroId     String
}

model Equipamento {
  id           Int    @id @default(autoincrement())
  cabeca       String
  peito        String
  luvas        String
  botas        String
  armaEsquerda String
  armaDireita  String
  hero         Hero   @relation(fields: [heroId], references: [id])
  heroId       String
}

model Fobia {
  id         Int    @id @default(autoincrement())
  monstro    String
  quantidade Int
  hero       Hero   @relation(fields: [heroId], references: [id])
  heroId     String
}
